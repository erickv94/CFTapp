<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mantenimientos.MateriaCiclo.MateriaCicloConsultarActivity">

<EditText
    android:id="@+id/idbusqueda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/idmatciclo"
    android:inputType="text"
    android:paddingTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materiacicloread"
            android:id="@+id/consultar"
            android:onClick="consultarMateriaCiclo"/>

    </LinearLayout>

    <EditText
        android:id="@+id/editIdCiclo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/idciclo"
        android:inputType="text"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/materiaCiclo"
        android:paddingTop="20dp"/>

    <Spinner
        android:id="@+id/editIdMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar"
        android:id="@+id/limpiar"
        android:onClick="limpiarMateriaCiclo"/>
</LinearLayout>