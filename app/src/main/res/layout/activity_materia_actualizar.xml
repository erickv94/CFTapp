<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mantenimientos.Materia.MateriaActualizarActivity">


    <EditText
        android:id="@+id/editIdMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/idmateria"
        android:inputType="text"
        android:paddingTop="20dp"/>
    <EditText
        android:id="@+id/codigomateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codigomateria"
        android:inputType="text"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/nombremateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombremateria"
        android:inputType="text"
        android:paddingTop="20dp"/>

    <EditText
        android:id="@+id/uvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/uvsmateria"
        android:inputType="text"
        android:paddingTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/materiaupdate"
        android:id="@+id/actualizar"
        android:onClick="actualizarMateria" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limpiar"
        android:id="@+id/limpiar"
        android:onClick="limpiarMateria"/>

</LinearLayout>