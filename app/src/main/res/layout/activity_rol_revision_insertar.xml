<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mantenimientos.RolRevision.RolRevisionInsertarActivity">


    <EditText
        android:id="@+id/nombrerolrevision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/nombrerolrevision"
        android:padding="20dp"/>

    <EditText
        android:id="@+id/descripcionrolrevision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/descripcionrolrevision"
        android:padding="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insertar"
        android:text="@string/rolrevisioninsert"
        android:onClick="insertarRolRevision"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/limpiar"
        android:text="@string/limpiar"
        android:onClick="limpiarRolRevision"/>

</LinearLayout>