<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/rol_detalledocente"
        android:paddingTop="20dp" />

    <Spinner
        android:id="@+id/busqueda1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/docente_detalledocente"
        android:paddingLeft="10dp"
        android:paddingTop="20dp" />

    <Spinner
        android:id="@+id/busqueda2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tramite_detalledocente"
        android:paddingLeft="10dp"
        android:paddingTop="20dp" />

    <Spinner
        android:id="@+id/busqueda3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detalledocenteread"
            android:id="@+id/imageButton2"
            android:drawableRight="@drawable/ic_show"
            android:onClick="consultarDetalleDocente"/>

    </LinearLayout>

    <EditText
        android:id="@+id/docente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/docente_detalledocente"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/tramite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tramite_detalledocente"
        android:enabled="false"
        />

    <EditText
        android:id="@+id/rol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/rol_detalledocente"
        android:enabled="false"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asistencia"
        android:hint="@string/asistencia_detalledocente"
        android:enabled="false"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/motivo"
        android:hint="@string/motivo_detalledocente"
        android:enabled="false"/>




</LinearLayout>