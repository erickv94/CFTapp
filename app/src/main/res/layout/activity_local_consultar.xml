<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/idbusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codigolocal"
        android:inputType="text"
        android:paddingTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/localread"
            android:id="@+id/imageButton2"
            android:drawableRight="@drawable/ic_show"
            android:onClick="consultarLocal"/>

    </LinearLayout>

    <EditText
        android:id="@+id/codigoedificio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codigoedificiolocal"
        android:inputType="text"
        android:paddingTop="45dp"
        android:enabled="false"/>

    <EditText
        android:id="@+id/nombrelocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombrelocal"
        android:inputType="text"
        android:enabled="false"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/codigolocal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/codigolocal"
        android:inputType="text"
        android:enabled="false"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/capacidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/capacidadlocal"
        android:inputType="text"
        android:enabled="false"
        android:paddingTop="20dp" />



</LinearLayout>
